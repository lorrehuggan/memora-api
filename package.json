{
  "name": "memora-api",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "check": "bun run type-check && bun run lint && bun run format:check",
    "db:generate": "bun --env-file .env drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "bun --env-file .env drizzle-kit migrate --config drizzle.config.ts"
  },
  "dependencies": {
    "arktype": "^2.1.25",
    "better-auth": "^1.3.34",
    "dotenv": "^17.2.3",
    "drizzle-arktype": "^0.1.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.4",
    "openai": "^6.7.0",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "bun-types": "^1.3.1",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2"
  }
}
